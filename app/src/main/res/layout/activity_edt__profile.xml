<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eef9bf"
    tools:context=".main.Edt_Profile">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="50dp">
            <View
                android:id="@+id/view2"
                android:layout_width="411dp"
                android:layout_height="328dp"
                android:background="#75b79e"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Edit Profile"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/view2" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="9dp"
                android:text="we highly suggest you to use \nthe correct information"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/bg_layout_white"
                android:orientation="vertical"
                android:paddingTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:layout_editor_absoluteY="125dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="120dp"
                    android:hint="Username"
                    app:hintTextAppearance="@style/TextInputLayoutHintText">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/view_username2"
                        android:layout_width="300dp"
                        android:text="Del"
                        android:layout_height="60dp"
                        android:textColor="#6a8caf"
                        android:textSize="18dp" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    app:passwordToggleEnabled="true"
                    android:hint="Password"
                    app:hintTextAppearance="@style/TextInputLayoutHintText">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/view_password2"
                        android:layout_width="300dp"
                        android:text="Del123"
                        android:textColor="#6a8caf"
                        android:inputType="textPassword"
                        android:layout_height="60dp"
                        android:textSize="18dp"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    app:passwordToggleEnabled="true"
                    android:hint="Name"
                    app:hintTextAppearance="@style/TextInputLayoutHintText">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/view_name2"
                        android:layout_width="300dp"
                        android:textColor="#6a8caf"
                        android:text="Delviro"
                        android:inputType="text"
                        android:layout_height="60dp"
                        android:textSize="18dp"
                         />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    app:passwordToggleEnabled="true"
                    android:hint="From"
                    app:hintTextAppearance="@style/TextInputLayoutHintText">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/view_from2"
                        android:layout_width="300dp"
                        android:textColor="#6a8caf"
                        android:text="Yogya"
                        android:inputType="text"
                        android:layout_height="60dp"
                        android:textSize="18dp"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:hint="Email"
                    app:hintTextAppearance="@style/TextInputLayoutHintText">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/view_email2"
                        android:layout_width="300dp"
                        android:textColor="#6a8caf"
                        android:text="Del@gmail.com"
                        android:layout_height="60dp"
                        android:textSize="18dp"
                         />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:hint="Phone"
                    app:hintTextAppearance="@style/TextInputLayoutHintText">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/view_Phone2"
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:text="081213561966"
                        android:textColor="#6a8caf"
                        android:textSize="18dp"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:hint="Gender"
                    app:hintTextAppearance="@style/TextInputLayoutHintText">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/view_Gender2"
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:text="Male"
                        android:textSize="18dp"
                        android:textColor="#6a8caf"
                         />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <View
                android:id="@+id/view3"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="172dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_view_circle_picture"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/view2" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/photo_edit_profile"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="182dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/icon_nopic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/view2" />

            <Button
                android:id="@+id/btn_add_new_photo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="152dp"
                android:background="@drawable/bg_btn_plus_blue"
                android:fontFamily="@font/montserrat_medium"
                android:text="+"
                android:textColor="#FFF"
                android:textSize="22dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/linearLayout" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/btn_back"
                android:background="@drawable/bg_layout_white"
                android:src="@drawable/ic_back2"
                app:layout_constraintEnd_toStartOf="@+id/btn_save"
                app:layout_constraintHorizontal_bias="0.545"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/bg_btn_green_primary"
                android:text="SAVE"
                android:textColor="@color/white"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>