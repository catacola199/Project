<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/main_bk"
    android:layout_height="match_parent"
    tools:context=".MainMenu">
<!--    lalal-->
        <TextView
            android:id="@+id/tulisan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/freelancer"
            android:gravity="center_horizontal"
            android:text="KodeGiri"
            android:textColor="@color/light_green_500"
            android:textSize="35sp" />

        <ImageView
            android:id="@+id/gambar"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_below="@id/tulisan"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/undraw_code_review_l1q9"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/gambar"
            android:clipToPadding="false"
            android:layout_height="wrap_content">
               <androidx.cardview.widget.CardView
                   android:layout_width="160dp"
                   android:layout_height="190dp"
                   android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:padding="10dp"
                            android:src="@drawable/undraw_code_thinking_1jeh" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="abcasd"
                            size/>
                </LinearLayout>
               </androidx.cardview.widget.CardView>

        </LinearLayout>



</RelativeLayout>